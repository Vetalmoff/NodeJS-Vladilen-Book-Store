<h1>Cart</h1>


<div id="card">
    {{#if books.length}}
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>quantity</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                {{#each books}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{../csrf}}">
                            Delete
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <p><strong>Price</strong><span class="price">{{price}}</span></p>

        <form action="/orders" method="POST">
            <button class="btn" type="submit">Make an order</button>
            <input type="hidden" name="_csrf" value="{{csrf}}">
        </form>
    {{else}}
        <p>Card is empty</p>
    {{/if}}
</div>